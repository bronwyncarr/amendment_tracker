<h1 class="text-center m-5">Pending Records</h1>

<%= link_to 'New Record', new_record_path, class: "btn btn-info" %>
<br>
<br>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Document Refence</th>
      <th>Manual</th>
      <th>Text</th>
      <th>Error</th>
      <th>Approved</th>
      <th>Incorporated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_records.each do |record| %>
      <tr>
        <td><%= record.document_ref %></td>
        <td><%= record.manual.name %></td>
        <td><%= record.text.first(80) %> ...</td>
        <td><%= record.error %></td>
        <td><% if record.approved? %>
          Yes
          <% else %>
          No
          <% end %>
        </td>
        <td><% if record.incorporated? %></td>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
