<h1 class="text-center m-5">Details</h1>

<p>
  <strong>Document ref:</strong>
  <%= @record.document_ref %>
</p>

<p>
  <strong>Manual:</strong>
  <%= @record.manual.name %>
</p>

<p>
  <strong>Text:</strong>
  <%= @record.text %>
</p>

<p>
  <strong>Error:</strong>
  <%= @record.error %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @record.comment %>
</p>

<p>
  <strong>Revision:</strong>
  <%= @record.revision %>
</p>

<p>
  <strong>Approved:</strong>
  <% if @record.approved? %>
    Yes
  <% else %>
    No
  <% end %>
</p>

<p>
  <strong>Incorporated:</strong>
  <% if @record.incorporated? %></td>
    Yes
  <% else %>
    No
  <% end %>
</p>

<%= link_to 'Edit', edit_record_path(@record), class: "text-info" %> |
<%= link_to 'Back', records_path, class: "text-info" %>
