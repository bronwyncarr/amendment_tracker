<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Document ref</th>
      <%# <th>Manual</th> %>
      <th>Text</th>
      <th>Error</th>
      <th>Comment</th>
      <th>Revision</th>
      <th>Approved</th>
      <th>Incorporated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.document_ref %></td>
        <%# <td><%= record.manual_id %></td> %>
        <td><%= record.text %></td>
        <td><%= record.error %></td>
        <td><%= record.comment %></td>
        <td><%= record.revision %></td>
        <td><%= record.approved %></td>
        <td><%= record.incorporated %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

